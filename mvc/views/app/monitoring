    <?php
    $dir = "../../../logs";
    if(is_dir($dir)) {

        $dh  = opendir($dir);
        while (false !== ($filename = readdir($dh))) {
            if(mime_content_type($dir.'/'.$filename) == "image/png")
                $files[] = $filename;
        }

        foreach ($files as $key => $value) {
            echo '<img src="' . get::$config->URL_LOGS . ' ' . $value . '" alt="' . $value . '" />';
        }

    } else {
        echo '<div class="cadre-info">Aucun logs actuellement. Ajouter le cron pour surveiller l\'activit√© du serveur.</div>';
    }
    ?>    
